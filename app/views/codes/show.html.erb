  <table class="table table-hover">
    <thead>
      <tr>

        <th>Description</th>
        <th>Code</th>
        <th>Handle</th>
      </tr>
    </thead>
    <tbody class="table-hover">
      <tr>
        <td><%= @code.description%></td>
        <td>
        <pre>
          <code class="language-css">
            <%= @code.code %>
            <h3><%= @code.good %></h3>
            <h3><%= @code.info %></h3>
          </code>
        </pre>
        </td>
      </tr>
      <tr>
        <td>Added at:</td>
        <td>
          <%= @code.created_at.to_formatted_s(:long)%>
        </td>
        <td>
            <%= link_to "", edit_code_path(@code) , class: "glyphicon glyphicon-edit"%>
            <%= link_to '', code_path(@code),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: ' glyphicon glyphicon-remove-circle ' %>
        </td>
      </tr>
    </tbody>
  </table>